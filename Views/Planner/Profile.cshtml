                    else
                    {
                        <img src="~/images/image1.png" alt="~/images/image1.png" width="40%"/>
                    }

                </dd>
                <dt class="col-sm-5  mb-3">
                    @Html.DisplayNameFor(model => model.PlannerName)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.PlannerName)
                </dd>
                <dt class="col-sm-5 mb-3">
                    @Html.DisplayNameFor(model => model.About)
                </dt>
                <dd class="col-sm-7 text-wrap" style="word-wrap: break-word">
                    @Html.DisplayFor(model => model.About)
                </dd>
                <dt class="col-sm-5 mb-3">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                
            </dl>
            <div class=" row justify-content-center text-center">
                <a asp-action="Edit" asp-route-id="@Model.PlannerId" class="btn btn-success m-3">Edit</a>
                <a asp-action="Index" class="btn btn-success m-3">Back</a>
            </div>
        </div>
    }

</div>
   


