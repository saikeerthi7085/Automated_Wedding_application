    @if (ViewData["planner"].ToString() == "PlannerUpdated")
    {
        <h4 class="text-center m-5">Your Details</h4>
        <div class=" justify-content-center text-center">
            <dl class="row text-center">
                <dd class="col-12">
                    @if (Model.Imageurl != null)
                    {
                        <img src=@Model.Imageurl alt="~/images/image1.png" width="40%" />

