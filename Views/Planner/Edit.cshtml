@model Automated_Wedding_Application.Models.PlannerModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
}



<h4 class="text-center m-3">Modify Your Profile Details</h4>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit"  enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlannerId" />
            <div class="form-group">
                <label asp-for="PlannerName" class="control-label"></label>
                <input asp-for="PlannerName" class="form-control" />
                <span asp-validation-for="PlannerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
                <textarea asp-for="About" class="form-control"> </textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group m-4">
                <input asp-for="Imageurl" hidden />
                <input asp-for="Plannerimage"  hidden />
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label" hidden></label>
                <input asp-for="ApplicationUserId" class="form-control" hidden />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group row justify-content-center text-center">
                <input type="submit" value="Save" class="btn btn-primary m-3" />
                <a asp-action="Profile" class="btn btn-primary m-3">Back</a>
            </div>
            <div>

            </div>
        </form>
    </div>
</div>



