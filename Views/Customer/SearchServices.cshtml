@model List<Automated_Wedding_Application.Models.PlannerModel>
@{
    ViewData["Title"] = "SearchServices";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4 class="text-center m-4">Book By Services</h4>
<div class="row mt-3 justify-content-center text-center">
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">


                alert("@ViewBag.Message");

        </script>

    }
    <div class="col-6">

        <select asp-items="Html.GetEnumSelectList<PlannerServices>()" class="form-control" onchange="fetchservices(this.value)">
            <option>Select Service</option>
        </select>
    </div>
    @if (ViewBag.serviceid != null)
    {
       
    }
    <div id="containersinfo">


    </div>



</div>



<script type="text/javascript">
    

    function fetchservices(siteid) {


        let uri = "/Customer/ServicesList?id=" + siteid
        fetch(uri)
            .then(response => response.text())
            .then(data => $('#containersinfo').empty().prepend(data));
    }


</script>